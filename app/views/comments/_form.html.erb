<h3>Post a Comment</h3>

<%= form_for [@article, @comment] do |f| %>
    <p>
        <%= f.label :authore_name, 'Your name' %><br>
        <%= f.text_field :authore_name %>
    </p>
    <p>
        <%= f.label :body, 'Comment' %><br>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit 'Submit' %>
    </p>
<% end %>