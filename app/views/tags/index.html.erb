<h1>Tags</h1>

<p>
    <% @tags.each do |tag| %>
        <p>
            <%= link_to tag.name, tag_path(tag) %><br>
            <%= link_to "Delete", tag_path(tag), method: :delete, data: {confirm: "Are you sure you want to delete this tag?"} %>
        </p>
        <br>
    <% end %>
</p>

<p>
    <%= link_to 'Go back to list of Articles', articles_path %>
</p>